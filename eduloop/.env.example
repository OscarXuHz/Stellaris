"""Environment variables template for EduLoop."""

# Application Environment
ENVIRONMENT=development
DEBUG=True

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022

# MiniMax API Configuration (Anthropic-compatible endpoint)
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_group_id_here
MINIMAX_BASE_URL=https://api.minimax.io/anthropic
MINIMAX_TEXT_MODEL=MiniMax-M2.5
MINIMAX_AUDIO_VOICE=male-cantonese

# Database Configuration
VECTOR_DB_TYPE=chroma
VECTOR_DB_PATH=./data/vector_db
SESSION_DB_PATH=./data/sessions

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/eduloop.log
